<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mrt.lk.moodlemobile.LoginActivity"
    android:background="@color/app_background">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/app_background_shadow"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Moodle Mobile App \n Course Name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:background="@null"
                android:layout_margin="5dp"
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:hint="Username"
                android:padding="5dp"
                android:text="anuradha"
                android:textColor="@color/app_textbox_text_color"
                android:textColorHint="@color/app_textbox_hint_color"
                android:textSize="18sp" />
            <!--maleethad-->
            <!--123-->
            <EditText
                android:background="@null"
                android:layout_margin="5dp"
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:gravity="center_horizontal"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:text="Anuradha@UoM18"
                android:textColor="@color/app_textbox_text_color"
                android:textColorHint="@color/app_textbox_hint_color"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/app_text_color_warning"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/layout_progress_bar" />

</RelativeLayout>
